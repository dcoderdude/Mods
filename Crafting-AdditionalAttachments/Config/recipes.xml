<?xml version="1.0" encoding="UTF-8"?>
<configs>
	<!-- Incendiary Rounds	-->
	<append xpath="/recipes">
		<recipe name="modGunIncendiaryRounds" count="1" craft_area="workbench" tags="learnable,workbenchCrafting">
			<ingredient name="resourceForgedSteel" count="2"/>
			<ingredient name="resourceGlue" count="5"/>
			<ingredient name="resourceScrapPolymers" count="5"/>
			<ingredient name="resourceOil" count="5"/>
		</recipe>
	</append>
  
  <!-- Shocking Rounds	-->
	<append xpath="/recipes">
		<recipe name="modGunShocked" count="1" craft_area="workbench" tags="learnable,workbenchCrafting">
			<ingredient name="resourceForgedSteel" count="2"/>
			<ingredient name="resourceGlue" count="5"/>
			<ingredient name="resourceScrapPolymers" count="5"/>
			<ingredient name="resourceElectricParts" count="5"/>
		</recipe>
	</append>
  
  <!-- Blessed Metal Rounds	-->
	<append xpath="/recipes">
		<recipe name="modBlessedMetal" count="1" craft_area="workbench" tags="learnable,workbenchCrafting">
			<ingredient name="resourceForgedSteel" count="5"/>
			<ingredient name="resourceGlue" count="5"/>
			<ingredient name="resourceScrapBrass" count="5"/>
			<ingredient name="resourceRawDiamond" count="2"/>
		</recipe>
	</append>

  <!-- Ice Rounds	-->
	<append xpath="/recipes">
		<recipe name="modGunLiquidNitrogen" count="1" craft_area="workbench" tags="learnable,workbenchCrafting">
			<ingredient name="resourceForgedSteel" count="2"/>
			<ingredient name="resourceGlue" count="5"/>
			<ingredient name="resourceRockSmall" count="5"/>
			<ingredient name="resourceSnowBall" count="5"/>
		</recipe>
	</append>
</configs>