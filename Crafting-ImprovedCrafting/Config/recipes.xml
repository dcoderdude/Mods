<configs>

	<!-- ============== Replace default crafting ============== -->
	<remove xpath="/recipes/recipe[@name='bucketEmpty']"/>
	<remove xpath="/recipes/recipe[@name='resourceGlue']"/>
	<remove xpath="/recipes/recipe[@name='farmPlotBlockPlayer']"/>
	<remove xpath="/recipes/recipe[@name='resourceCobblestones']"/>
	<remove xpath="/recipes/recipe[@name='resourceConcreteMix']"/>
	<remove xpath="/recipes/recipe[@name='resourceCement']"/>
	<remove xpath="/recipes/recipe[@name='resourceBulletCasing']"/>
	<remove xpath="/recipes/recipe[@name='resourceBulletTip']"/>
	<remove xpath="/recipes/recipe[@name='resourceGunPowder']"/>
	<remove xpath="/recipes/recipe[@name='resourceForgedIron']"/>
	<remove xpath="/recipes/recipe[@name='resourceForgedSteel']"/>
	
	<!-- ============== Basic crafting ============== -->
	<append xpath="/recipes">
	
		<recipe name="barbedWireSheet" craft_time = "0.5" count="1">
		  <ingredient name="resourceScrapIron" count="5"/>
		</recipe>

		<recipe name="trapSpikesNew" craft_time = "0.5" count="1">
		  <ingredient name="resourceWood" count="5"/>
		</recipe>

		<recipe name="woodLogSpike1" craft_time = "0.5" count="1">
		  <ingredient name="resourceWood" count="10"/>
		</recipe>
		
		<recipe name="scrapIronLogSpike4" craft_time = "0.5" count="1">
		  <ingredient name="resourceScrapIron" count="10"/>
		</recipe>
		
		<recipe name="resourceSewingKit" craft_time = "0.5" count="1">
		  <ingredient name="resourceScrapIron" count="1"/>
		  <ingredient name="resourceCropCottonPlant" count="3"/>
		</recipe>
		
		<recipe name="foodShamSandwich" craft_time = "0.5" count="1">
		  <ingredient name="foodRawMeat" count="1"/>
		  <ingredient name="foodCornBread" count="2"/>
		</recipe>
		
		<recipe name="resourceGlue" craft_time = "0.5" count="1">
			<ingredient name="resourceScrapPolymers" count="7"/>
			<ingredient name="drinkJarRiverWater" count="3"/>
		</recipe>
		
		<recipe name="resourceAcid" craft_time = "0.5" count="1">
		  <ingredient name="resourcePotassiumNitratePowder" count="7"/>
		  <ingredient name="drinkJarGrainAlcohol" count="3"/>
		</recipe>
		
		<recipe name="resourceScrapPolymers" craft_time = "0.5" count="1">
		  <ingredient name="resourcePotassiumNitratePowder" count="7"/>
		  <ingredient name="resourceScrapLead" count="3"/>
		</recipe>
		
		<recipe name="farmPlotBlockPlayer" count="1" craft_time="0.5">
			<ingredient name="resourceWood" count="4"/>
			<ingredient name="resourceBone" count="10"/>
			<ingredient name="terrDirt" count="10"/>
		</recipe>
		
		<!-- ============== Forge crafting ============== -->
		<recipe name="bucketEmpty" craft_time = "0.5" count="1" material_based="true" craft_area="forge">
		  <ingredient name="unit_clay" count="1"/>
		</recipe>

		<recipe name="resourceMechanicalParts" craft_time = "0.5" count="1" material_based="true" craft_area="forge">
		  <ingredient name="unit_iron" count="3"/>
		  <ingredient name="unit_brass" count="2"/>
		  <ingredient name="unit_clay" count="5"/>
		</recipe>
		
		<recipe name="resourceElectricParts" craft_time = "0.5" count="1" material_based="true" craft_area="forge">
		  <ingredient name="unit_iron" count="3"/>
		  <ingredient name="unit_brass" count="2"/>
		  <ingredient name="unit_clay" count="5"/>
		</recipe>
		
		<recipe name="toolBeaker" craft_time = "0.5" count="1" material_based="true" craft_area="forge">
		  <ingredient name="unit_glass" count="13"/>
		  <ingredient name="unit_lead" count="6"/>
		  <ingredient name="unit_clay" count="5"/>
		</recipe>
		
		<recipe name="resourceSpring" craft_time = "0.5" count="1" material_based="true" craft_area="forge">
		  <ingredient name="unit_iron" count="3"/>
		  <ingredient name="unit_clay" count="5"/>
		</recipe>
		
		<recipe name="resourceBulletCasing" craft_time = "0.5" count="1" material_based="true" craft_area="forge" tags="perkAdvancedEngineering">
			<ingredient name="unit_brass" count="5"/>
			<ingredient name="unit_clay" count="1"/>
			<effect_group>
				<passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,1,2,3,4" value=".25,.25,.25,.177,.12" tags="unit_brass"/>
			</effect_group>
		</recipe>

		<recipe name="resourceBulletTip" craft_time = "0.5" count="1" material_based="true" craft_area="forge" tags="perkAdvancedEngineering">
			<ingredient name="unit_lead" count="2"/>
			<ingredient name="unit_clay" count="1"/>
			<effect_group>
				<passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,1,2,3,4" value=".25,.25,.25,.177,.12" tags="unit_lead"/>
			</effect_group>
		</recipe>
		
		<recipe name="resourceForgedIron" craft_time = "0.5" count="1" material_based="true" craft_area="forge" tags="perkAdvancedEngineering">
			<ingredient name="unit_iron" count="10"/>
			<ingredient name="unit_clay" count="5"/>
			<effect_group>
				<passive_effect name="CraftingIngredientCount" operation="perc_add" level="0,1,2,3,4" value=".25,.25,.25,.177,.12" tags="unit_clay,unit_iron"/>
			</effect_group>
		</recipe>

		<recipe name="resourceForgedSteel" craft_time = "0.5" count="1" material_based="true" craft_area="forge" tags="perkAdvancedEngineering" craft_tool="toolForgeCrucible">
			<ingredient name="unit_iron" count="20"/>
			<ingredient name="unit_clay" count="10"/>
			<effect_group>
				<passive_effect name="CraftingIngredientCount" level="0,1,2,3,4" operation="perc_add" value=".5,.5,.5,.3,.15" tags="unit_clay,unit_iron"/>
			</effect_group>
		</recipe>	
		
		<!-- ============== Chemistry crafting ============== -->
		<recipe name="resourceGunPowder" craft_time = "0.5" count="1" craft_area="chemistryStation" tags="chemStationCrafting">
			<ingredient name="resourceCoal" count="1"/>
			<ingredient name="resourcePotassiumNitratePowder" count="1"/>
		</recipe>

		<recipe name="drugPainkillers" craft_time = "0.5" count="1" craft_area="chemistryStation">
		  <ingredient name="resourceCropChrysanthemumPlant" count="1"/>
		  <ingredient name="resourceCropGoldenrodPlant" count="1"/>
		</recipe>
		
		<recipe name="resourceRawDiamond" craft_time = "0.5" count="1" craft_area="chemistryStation">
		  <ingredient name="resourceCoal" count="1000"/>
		</recipe>
		
		<recipe name="resourceScrapPolymers" craft_time = "0.5" count="1" craft_area="chemistryStation">
		  <ingredient name="resourcePotassiumNitratePowder" count="1"/>
		  <ingredient name="resourceScrapLead" count="1"/>
		</recipe>
		
		<recipe name="resourceAcid" craft_time = "0.5" count="1" craft_area="chemistryStation">
		  <ingredient name="resourcePotassiumNitratePowder" count="1"/>
		  <ingredient name="drinkJarGrainAlcohol" count="1"/>
		</recipe>
		
		<recipe name="resourceGlue" craft_time = "0.5" count="1" craft_area="chemistryStation" tags="perkAdvancedEngineering,chemStationCrafting">
			<ingredient name="resourceScrapPolymers" count="1"/>
			<ingredient name="drinkJarRiverWater" count="1"/>
		</recipe>
		
		<!-- ============== Cement crafting ============== -->
		<recipe name="resourceCobblestones" count="1" craft_time = "0.5" craft_area="cementMixer" tags="cementMixerCrafting">
		  <ingredient name="resourceClayLump" count="1"/>
		  <ingredient name="resourceRockSmall" count="1"/>
		</recipe>
		
		<recipe name="resourceConcreteMix" count="1" craft_time = "0.5" craft_area="cementMixer" tags="cementMixerCrafting">
		  <ingredient name="resourceCement" count="1"/>
		  <ingredient name="bucketRiverWater" count="1"/>
		</recipe>
		
		<recipe name="resourceCrushedSand" count="1" craft_time = "0.5" craft_area="cementMixer" tags="cementMixerCrafting">
			<ingredient name="resourceRockSmall" count="1"/>
		</recipe>
		
		<recipe name="resourceCement" count="1" craft_time = "0.5" craft_area="cementMixer" tags="cementMixerCrafting">
		  <ingredient name="resourceCrushedSand" count="1"/>
		  <ingredient name="resourceRockSmall" count="1"/>
		</recipe>
	</append>
</configs>